{
    "name": "Counter App",
    "version": "1.0",
    "description": "Chrome extension + Svelte boilerplate",
    "manifest_version": 3,
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "js": ["content/index.js"],
        "matches": ["https://*/*", "http://*/*"]
      }
    ]
  }